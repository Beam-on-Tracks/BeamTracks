{
  "name": "BeamTracks Monorepo",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "remoteEnv": {
    "DAGGER_ENGINE": "containerd"
  },
  // Open the entire repo as the workspace
  "workspaceFolder": "/workspaces",
  "settings": {
    // Use zsh as the integrated terminal in VS Code
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
      "zsh": { "path": "/usr/bin/zsh" }
    }
  },
  "customizations": {
    "codespaces": {
      "prebuilds": {
        "branches": ["main"],              // which branches to autoâ€‘prebuild
        "pullRequests": { "branches": ["main"] }, // which PRs
        "secrets": [                       // any Codespace secrets you need
          "DAGGER_TOKEN", "MIX_ENV"
        ]
      }
    }
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode-remote.remote-containers",
    "golang.go"
  ],
  // Forward ports for each app
  "forwardPorts": [4000, 4001, 4002],
  // When container starts, install deps for all apps
  "postCreateCommand": "./.devcontainer/setup.sh",
  "remoteUser": "vscode"
}

